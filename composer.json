{
    "name" :              "jbzoo/cli",
    "type" :              "library",
    "description" :       "The framework helps create CLI tools and provides new tools for symfony/console, symfony/process.",
    "license" :           "MIT",
    "keywords" :          [
        "jbzoo",
        "terminal",
        "console",
        "cli",
        "command-line",
        "console-application",
        "cron",
        "crontab",
        "elk",
        "elk-stack",
        "elastic",
        "logstash",
        "symfony",
        "process",
        "symfony-console",
        "symfony-process"
    ],

    "authors" :           [
        {
            "name" :  "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role" :  "lead"
        }
    ],

    "minimum-stability" : "dev",
    "prefer-stable" :     true,

    "require" :           {
        "php" :             "^8.2",

        "jbzoo/utils" :     "^7.3",
        "jbzoo/event" :     "^7.0.2",

        "symfony/process" : ">=7.3.4",
        "symfony/console" : ">=7.3.4",
        "symfony/lock" :    ">=7.3.4",
        "monolog/monolog" : "^3.9.0"
    },

    "require-dev" :       {
        "jbzoo/toolbox-dev" : "^7.3"
    },

    "autoload" :          {
        "psr-4" : {"JBZoo\\Cli\\" : "src"},
        "files" : ["src/functions.php"]
    },

    "autoload-dev" :      {
        "psr-4" : {"JBZoo\\PHPUnit\\" : "tests"}
    },

    "config" :            {
        "optimize-autoloader" : true,
        "allow-plugins" :       {"composer/package-versions-deprecated" : true}
    },

    "extra" :             {
        "branch-alias" : {
            "dev-master" : "7.x-dev"
        }
    }
}
