{
    "name"              : "jbzoo/cli",
    "type"              : "library",
    "description"       : "The framework helps create CLI tools and provides new tools for symfony/console, symfony/process.",
    "license"           : "MIT",
    "keywords"          : [
        "jbzoo",
        "terminal",
        "console",
        "cli",
        "command-line",
        "console-application",
        "symfony",
        "process",
        "symfony-console",
        "symfony-process"
    ],

    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "minimum-stability" : "dev",
    "prefer-stable"     : true,

    "require"           : {
        "php"                                 : "^8.1",

        "jbzoo/utils"                         : "7.x-dev",
        "jbzoo/event"                         : "7.x-dev",

        "symfony/process"                     : ">=5.4",
        "symfony/console"                     : ">=5.4",
        "symfony/lock"                        : ">=5.4",
        "bluepsyduck/symfony-process-manager" : ">=1.3.3"
    },

    "require-dev"       : {
        "jbzoo/toolbox-dev" : "7.x-dev"
    },

    "autoload"          : {
        "psr-4" : {"JBZoo\\Cli\\" : "src"},
        "files" : [
            "src/functions.php"
        ]
    },

    "autoload-dev"      : {
        "psr-4" : {"JBZoo\\PHPUnit\\" : "tests"}
    },

    "config"            : {
        "optimize-autoloader" : true,
        "allow-plugins"       : {"composer/package-versions-deprecated" : true}
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "7.x-dev"
        }
    }
}
